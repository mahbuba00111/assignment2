<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp">

    <TextView
            android:id="@+id/shipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Shipping Method"
            android:textSize="18sp"
            android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/radioGroupShippingMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="2dp">

        <RadioButton
            android:id="@+id/rbHomeDelivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Delivery"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rbCourier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Courier"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rbPostOffice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post Office"
            android:textSize="16sp" />

    </RadioGroup>

    <TextView
        android:id="@+id/payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Payment Method"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/cbCashOnDelivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cash on Delivery"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/cbBkash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bKash"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/cbRocket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rocket"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/cbNagad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nagad"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/cbVisaMastercard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VISA/Master Card"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginVertical="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate this app"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="10dp"
            />
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0" />

    </LinearLayout>

    <Button
        android:id="@+id/btnSubmitOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Submit Order"
        android:textSize="16sp"
        android:backgroundTint="@android:color/holo_red_light"
        android:textColor="@android:color/white"
       />
</LinearLayout>
